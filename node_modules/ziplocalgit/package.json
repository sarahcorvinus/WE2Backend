{
  "name": "ziplocalgit",
  "version": "1.0.3",
  "description": "Command line tool to zip the local git repository",
  "author": "Jens von Pilgrim <jens.vonpilgrim@bht-berlin.de>",
  "license": "EPL-2.0",
  "homepage": "https://gitlab.bht-berlin.de/nodepackages/ziplocalgit",
  "repository": {
    "type": "git",
    "url": "https://gitlab.bht-berlin.de/nodepackages/ziplocalgit.git"
  },
  "bin": {
    "ziplocalgit": "./bin/cli.js"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "bin/cli.js",
    "dist/"
  ],
  "scripts": {
    "build": "tsc && copyfiles --up 1 -e ./src/**/*.ts ./src/**/*.* dist",
    "clean": "rimraf dist",
    "watch.build": "tsc --watch",
    "test": "JEST_JUNIT_SUITE_NAME=\"{filename}\" jest",
    "prepack": "npm run build"
  },
  "dependencies": {
    "bestzip": "^2.2.1",
    "commander": "^9.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "copyfiles": "^2.4.1",
    "jest": "^29.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
